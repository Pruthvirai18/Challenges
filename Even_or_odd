#Code 1
//Program to check whether the number is even or odd 
#include<stdio.h>
void main()
{
 int n;
    printf("Enter the number");
    scanf("%d",&n);
    if(n%2==0)
    {
        printf("The number %d is even",n);
    
    }
    else
    {
        printf("The number %d is odd",n);
    }
}

#Code 2
//Program to check whether the number is even or odd using ternary operator
#include<stdio.h>
void main()
{
 int n;
    printf("Enter the number");
    scanf("%d",&n);
    (n%2==0)?printf("%d is even",n):printf("%d is odd",n);
}

#Code 3
//Program to check whether the number is even or odd using bitwise operator
#include<stdio.h>
int iseven(int n)
{
    return(!(n&1));
}
void main()
{
 int n;
    printf("Enter the number");
    scanf("%d",&n);
    iseven(n)?printf("%d is even",n):printf("%d is odd",n);
   
}

