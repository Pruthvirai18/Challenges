#Code 1
//Check whether the number is positive or negative by trial and error method
#include<stdio.h>
void main()
{
    int n;
    printf("Enter a number");
    scanf("%d",&n);
    if(n>0)
    {
        printf("Number %d is positive",n);
    }
    else if(n<0)
    {
       printf("Number %d is negative",n);  
    }
    else
    {
        printf("Number %d is zero",n);
    }
}

#Code 2
//Check whether the number is positive or negative using nested if-else statements
#include<stdio.h>
void main()
{
    int n;
    printf("Enter a number");
    scanf("%d",&n);
    if(n>=0)
    {
        if(n>0)
        {
            printf("Number %d is positive",n);
        }
        else
        {
            printf("Number %d is zero",n);
        }
    }
    else
    {
        printf("Number %d is negative",n);
    }
}

#Code 3
//Program to find whether the number is positive or negative using ternary operator
#include<stdio.h>
void main()
{
 float n;
    printf("Enter the number");
    scanf("%f",&n);
    if(n==0)
    {
        printf("The number %f is zero",n);
    }
    else
    {
    (n>0)?printf("%f is positive",n):printf("%f is negative",n);
    }
}
